@model IEnumerable<FelipeB_App3BI.Models.ProdutoModel>
@{
    ViewBag.Title = "Produtos";
    ViewBag.ActiveIndex = 2;
}

<div class="row">
    <div class="col-12 card rounded link px-0 shadow">
        <div class="card-header text-center">
            <h1>Produtos</h1>
        </div>
        <div class="card-body py-2">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col" class="border-top-0">@Html.DisplayNameFor(Model => Model.ID)</th>
                        <th scope="col" class="border-top-0">@Html.DisplayNameFor(Model => Model.Nome)</th>
                        <th scope="col" class="border-top-0">@Html.DisplayNameFor(Model => Model.Valor)</th>
                        <th scope="col" class="border-top-0">@Html.DisplayNameFor(Model => Model.Quantidade)</th>
                        <th scope="col" class="border-top-0"><div class="d-flex justify-content-end"><a class="btn btn-success" href="@Url.Action("Form")">+ Criar novo</a></div></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var m in Model)
                        {
                            <tr class="pointer" onclick="window.location = '@Url.Action("Details", new { id = m.ID })'">
                                <th scope="row">@m.ID</th>
                                <td>@m.Nome</td>
                                <td>@m.Valor</td>
                                <td>@m.Quantidade</td>
                                <td>
                                    <div class="d-flex justify-content-end">
                                        <a href="@Url.Action("Form", new { id = m.ID })" class="btn btn-outline-info rounded mr-3">Editar</a>

                                        @using (Html.BeginForm("Delete", "Produto", FormMethod.Post))
                                        {
                                            <button class="btn btn-outline-danger rounded" type="submit" name="id" value="@m.ID">Excluir</button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
