@model FelipeB_App3BI.Models.ProdutoModel
@{
    ViewBag.Title = "ProdutoForm";
    ViewBag.ActiveIndex = 2;
}

@{

    if (Model != null)
    {
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between">
                    <h2>Edição de @(Model.Nome ?? "Produto")</h2>
                    @{
                        if ((ViewBag.Editing ?? false))
                        {
                            <div class="d-flex align-items-center">
                                @using (Html.BeginForm("Delete", "Produto", FormMethod.Post))
                                {
                                    <button class="btn btn-danger" type="submit" name="id" value="@Model.ID">Deletar</button>
                                }
                            </div>
                        }
                    }
                </div>
                <h6 class="text-muted font-italic">@Html.DisplayNameFor(model => model.ID):&nbsp;@Model.ID</h6>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Save", "Produto", FormMethod.Post))
                {
                    <input name="ID" value="@Model.ID" class="d-none"/>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Nome)
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                        <small class="form-text text-danger">@Html.ValidationMessageFor(model => model.Nome)</small>
                    </div>
                    
                    <div class="form-row w-100">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.Valor)
                            @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control" } })
                            <small class="form-text text-danger">@Html.ValidationMessageFor(model => model.Valor)</small>
                        </div>
                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.Quantidade)
                            @Html.EditorFor(model => model.Quantidade, new { htmlAttributes = new { @class = "form-control" } })
                            <small class="form-text text-danger">@Html.ValidationMessageFor(model => model.Quantidade)</small>
                        </div>
                    </div>

                    <div class="d-flex mt-3">
                        <button type="submit" class="btn btn-primary ml-auto">Enviar</button>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <p>Algo está muito errado! Não tente colocar suas próprias URLS</p>
    }
}
